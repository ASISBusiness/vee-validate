{
  "name": "vee-validate-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Form Validation for Vue.js",
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT",
  "homepage": "https://vee-validate.logaretm.com",
  "repository": "https://github.com/logaretm/vee-validate",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci --detectOpenHandles --runInBand",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "build": "node scripts/build.mjs",
    "cover": "jest --coverage",
    "cover:ci": "jest --coverage --ci --runInBand --detectOpenHandles",
    "postversion": "npm run build",
    "docs:dev": "cd ./docs && npm run dev && cd -",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vue/devtools-api": "^6.5.0",
    "chalk": "^5.2.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "filesize": "^10.0.6",
    "flush-promises": "^1.0.2",
    "fs-extra": "^11.1.0",
    "gzip-size": "^7.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "klona": "^2.0.6",
    "lerna": "^6.5.1",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prettier-plugin-astro": "^0.8.0",
    "raf-stub": "^3.0.0",
    "rollup": "^3.19.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "0.31.2",
    "terser": "^5.16.6",
    "ts-jest": "^29.0.5",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "type-fest": "^3.6.1",
    "typescript": "4.9.5",
    "vue": "^3.2.47",
    "yup": "^1.0.2"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ]
  }
}
